<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="EazyShapeView">
        <!-- Shape颜色 -->
        <attr name="shapeColor" format="color"/>
        <!-- Shape 轮廓宽度 -->
        <attr name="shapeStrokeWidth" format="dimension"/>
        <!-- Shape 大小 -->
        <attr name="shapeSize" format="dimension"/>
        <!-- Shape 圆角大小 -->
        <attr name="shapeRoundRectSize" format="dimension"/>
        <!-- Shape 圆角位置 -->
        <attr name="shapeRadiusPosition" format="enum">
            <enum name="all" value="0"/>
            <enum name="left" value="1"/>
            <enum name="top" value="2"/>
            <enum name="right" value="3"/>
            <enum name="bottom" value="4"/>
            <enum name="top_left" value="5"/>
            <enum name="top_right" value="6"/>
            <enum name="bottom_left" value="7"/>
            <enum name="bottom_right" value="8"/>
            <enum name="top_left_and_bottom_right" value="9"/>
            <enum name="top_right_and_bottom_left" value="10"/>
        </attr>
        <!-- 实心/空心 -->
        <attr name="isStrokeOrFill" format="boolean"/>
        <!-- 直线/虚线 -->
        <attr name="isSolidOrDotted" format="boolean"/>
        <!-- 透明度 -->
        <attr name="shapeAlpha" format="integer"/>

        <!-- 文字相关 -->
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="textString" format="string"/>
        <attr name="textType" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
        </attr>
        <attr name="multi_line_complete" format="boolean"/>
    </declare-styleable>
</resources>